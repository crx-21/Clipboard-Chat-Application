//---------------------------------------------------------------------------

#pragma hdrstop

#include "MessagesToFile.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
MessageToFile::AddVector(String text)
	{
		SavedMessages.push_back(text);
	}
	 MessageToFile::returnPath()
	{
       return Path;
	}
	 MessageToFile::setPath(String filePath)
	{
		Path=filePath;
    }
	 MessageToFile::SetGlobalCheck(bool ok)
	{
	  GlobalCheck=ok;
	}
	 MessageToFile::GetGlobalCheck()
	{
        return GlobalCheck;
	}
