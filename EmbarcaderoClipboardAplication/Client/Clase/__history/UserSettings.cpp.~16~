{
   return ColourMemo;
}

String UserSettings::GetColourEdit()
{
	return ColourEdit;
}

String UserSettings::GetColourText()
{
  return ColourText;
}

bool UserSettings::GetCheckThemeFolder()
{
    return CheckThemeFolder;
}

