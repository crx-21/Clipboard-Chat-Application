{
	  ColourText=Color;
}

void UserSettings::SetCheckThemeFolder(bool set)
{
	 CheckThemeFolder=set;
}

void MessagesInterpreter::resetValues()
{
    isBold = false;
    isItalic = false;
    isUnderline = false;
    messageColor = clWindowText;
    username = "";
    messageText = "";
    timestamp = "";
}

//Getteri
