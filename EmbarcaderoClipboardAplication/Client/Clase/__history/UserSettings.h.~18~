  void SetColourEdit(String Color);
  void SetColourText(String Color);
  void SetCheckThemeFolder(bool set);

  String GetColourForm();
  String GetColourMemo();
  String GetColourEdit();
  String GetColourText();

  bool GetCheckThemeFolder();

};
