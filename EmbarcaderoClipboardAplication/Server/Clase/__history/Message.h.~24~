//---------------------------------------------------------------------------
class Message
{
protected:
	String text;
	AnsiString user;
	map <int,string> clientUsers; //Map pentru stocare de handle-uri asociate username-ului clientilor
public:
TDateTime timestamp;
Message();
Message(String text,String user);
//Metode:
void setText(String InputText)
{
   text=InputText;                    //Modificam text

}
void setUser(String InputUser)
{
	user=InputUser;                 //Modificam user
}
String getText()
{
return text;              //Facem rost de text
}
String getUser()
{
    return user;            //Facem rost de user
}

};
#endif
