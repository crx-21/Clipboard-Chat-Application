//---------------------------------------------------------------------------

#pragma hdrstop

#include "Message.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

Message::Message()
{
	  text="Default";
	  timestamp=Now();
	  user="Unknown";
}

Message::Message(String text,TDateTime timestamp,String user)
{
	 this->text=text;
	 timestamp=Now();
     this->user=user;
}
